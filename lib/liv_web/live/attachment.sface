<li>
    <div :if={{ @url == "" }}
	 id={{ "attachment-#{@name}" }}
	 class="progress-box">
	<div class="progress"
	     style="width:{{ floor(@offset/@size*100) }}%"/>
    </div>
    <a :if={{ @url != "" }}
       id={{ "attachment-#{@name}" }}
       class="attachment-download"
       data-type={{ @type }} href={{ @url }} download={{ @name }}>
	{{ @name }}
    </a>
</li>
