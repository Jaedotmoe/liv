<li>
    {#if @url == ""}
    <div id={"attachment-#{@name}"}
	 class="progress-box">
	<div class="progress"
	     style={"width:#{floor(@offset/@size*100)}%"}/>
    </div>
    {#else}
    <a id={"attachment-#{@name}"}
       class="attachment-download"
       href={@url} download={@name}>
	{@name}
    </a>
    {/if}
</li>
