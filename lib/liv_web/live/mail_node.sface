<div class={{ "message", "message-unread": unread?(@meta.flags) }}>
    <LivePatch to={{ Routes.mail_path(@socket, :view, @docid) }}
	       class="subject">
	{{ @meta.subject }}
    </LivePatch>
    <Link to={{ "mailto:#{tl(@meta.from)}" }}
	  class="email-addr">{{ email_name(@meta.from) }}</Link>
    <div class="date">{{ date_string(@meta.date, @tz_offset) }}</div>
</div>
