{#case @type}
{#match :patch}
<LivePatch to={@path_or_msg} class={"button", disabled: @disabled}>{@text}</LivePatch>
{#match :button}
<button phx-click={@path_or_msg} class={"button", disabled: @disabled}>{@text}</button>
{#match :attach}
<div class="attach" id={@path_or_msg} phx-hook="Attach">
    <label class="button" for="write-attach">{@text}</label>
    <FileInput name="attach" id="write-attach" opts={multiple: true}/>
</div>
{/case}
